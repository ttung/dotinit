#!/bin/tcsh
cd ${HOME}
'rm' -f .cshrc*
'rm' -f .emacs
'rm' -f .xstart
'rm' -f .dvorak
'rm' -f .xsession
'rm' -f .qwerty
'rm' -f .fvwm2rc
'rm' -f .xmodmap
'rm' -f .dvorak.keysym
'rm' -f .Xdefaults
'rm' -f .hushlogin

'rm' -f .aliases
'rm' -f .login
'rm' -f .logout

'rm' -f .xinitrc

'rm' -f .addressbook*

ln -sf .init/cshrc .cshrc
ln -sf .init/cshrc.OCF.Berkeley.EDU .cshrc.OCF.Berkeley.EDU
ln -sf .init/cshrc.aliases .cshrc.aliases
ln -sf .init/cshrc.complete .cshrc.complete
ln -sf .init/cshrc.crhc .cshrc.crhc
ln -sf .init/cshrc.eng.cisco.com .cshrc.eng.cisco.com
ln -sf .init/cshrc.interactive .cshrc.interactive
ln -sf .init/cshrc.login .cshrc.login
ln -sf .init/cshrc.logout .cshrc.logout
ln -sf .init/cshrc.paths .cshrc.paths
ln -sf .init/cshrc.soda.csua.berkeley.edu .cshrc.soda.csua.berkeley.edu
ln -sf .init/emacs .emacs
ln -sf .init/xstart .xstart
ln -sf .init/dvorak .dvorak
ln -sf .init/xsession .xsession
ln -sf .init/qwerty .qwerty
ln -sf .init/fvwm2rc .fvwm2rc
ln -sf .init/xmodmap .xmodmap
ln -sf .init/dvorak.keysym .dvorak.keysym
ln -sf .init/Xdefaults .Xdefaults
ln -sf .init/hushlogin .hushlogin

ln -sf .cshrc.aliases .aliases
ln -sf .cshrc.login .login
ln -sf .cshrc.logout .logout

ln -sf .xsession .xinitrc 

if ($user == 'tonytung') then
    ln -sf .init/cabb-addressbook/addressbook .addressbook
    ln -sf .init/cabb-addressbook/addressbook-college-00-01 .addressbook-college-00-01
    ln -sf .init/cabb-addressbook/addressbook-college-95-96 .addressbook-college-95-96
    ln -sf .init/cabb-addressbook/addressbook-college-96-97 .addressbook-college-96-97
    ln -sf .init/cabb-addressbook/addressbook-college-97-98 .addressbook-college-97-98
    ln -sf .init/cabb-addressbook/addressbook-college-98-99 .addressbook-college-98-99
    ln -sf .init/cabb-addressbook/addressbook-college-99-00 .addressbook-college-99-00
    ln -sf .init/cabb-addressbook/addressbook-high-school .addressbook-high-school
    ln -sf .init/cabb-addressbook/addressbook-other-friends .addressbook-other-friends
    ln -sf .init/cabb-addressbook/addressbook-relatives .addressbook-relatives
    ln -sf .init/cabb-addressbook/addressbook-work .addressbook-work
endif

cd -
